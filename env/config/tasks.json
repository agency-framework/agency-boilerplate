{
  "clean": {
    "subtasks": [{
      "name": "default",
      "files": {
        "dest": "<%= destination %>"
      }
    }]
  },
  "copy": {
    "subtasks": [{
      "name": "default",
      "files": {
        "src": ["src/assets/**/*.{ttf,woff,eot,svg,ico,png,jpg,gif}"],
        "dest": "<%= destination %>/assets"
      }
    }, {
      "name": "external",
      "files": {
        "src": ["src/external/**/*"],
        "dest": "<%= destination %>/external"
      }
    }],
    "watch": [{
      "src": ["src/assets/**/*.{ttf,woff,eot,svg,ico,png,jpg,gif}"],
      "tasks": ["default"]
    }, {
      "src": ["src/external/**/*"],
      "tasks": ["external"]
    }]
  },
  "handlebars": {
    "assets": "<%= destination %>/assets/",
    "layouts": {
      "files": {
        "src": ["./src/tmpl/partials/layouts/**/*.hbs"]
      },
      "options": {
        "base": "./src/tmpl/partials"
      }
    },
    "partials": {
      "files": {
        "src": ["./src/tmpl/partials/**/*.hbs"]
      },
      "options": {
        "base": "./src/tmpl/partials"
      }
    },
    "globals": {
      "files": {
        "cwd": "./src/data/",
        "src": ["./globals/**/*.{json,yaml}"]
      }
    },
    "scripts": {
      "js": {
        "main": "<%= destination %>/js/app.js",
        "embed": [
          "<%= destination %>/js/embed/_main.js",
          "<%= destination %>/js/embed/animationFrame.js",
          "<%= destination %>/js/embed/picture.js",
          "<%= destination %>/js/embed/embed.js"
        ]
      },
      "css": {
        "main": "css/style.css",
        "critical": "<%= destination %>/css/critical.css"
      }
    },
    "subtasks": [{
      "name": "pages",
      "layout": "agency-pkg-layouts/default",
      "renderingOnce": false,
      "files": {
        "src": ["./src/tmpl/**/*.hbs", "!./src/tmpl/partials/**/*.hbs"],
        "dest": "<%= destination %>/"
      },
      "data": {
        "cwd": "./src/data/",
        "src": ["./**/*.{json,yaml}", "!./globals/**/*.{json,yaml}"]
      }
    }, {
      "name": "docs",
      "layout": "agency-pkg-layouts/default",
      "renderingOnce": false,
      "files": {
        "src": ["./node_modules/agency-pkg-docs/docs/*.hbs"],
        "dest": "<%= destination %>/docs/",
        "base": "./node_modules/agency-pkg-docs/docs/"
      },
      "data": {
        "cwd": "./node_modules/agency-pkg-docs/docs/data/",
        "src": ["./**/*.{json,yaml}", "!./globals/**/*.{json,yaml}"]
      }
    }, {
      "name": "docs-partials",
      "layout": "agency-pkg-layouts/documentation/detail",
      "renderingOnce": false,
      "files": {
        "src": ["./src/tmpl/partials/**/*.hbs", "!./src/tmpl/partials/common/**/*.hbs", "!./src/tmpl/partials/layouts/**/*.hbs"],
        "dest": "<%= destination %>/docs/",
        "base": "./src/tmpl/"
      }
    }, {
      "name": "docs-packages",
      "layout": "agency-pkg-layouts/documentation/detail",
      "renderingOnce": true,
      "files": {
        "src": [],
        "dest": "<%= destination %>/docs/packages",
        "base": "./node_modules/"
      }
    }],
    "watch": [{
      "src": ["src/tmpl/**/*.hbs", "src/data/**/*.json"]
    }]
  },
  "registerpackages": {
    "subtasks": [{
      "name": "default",
      "pattern": [
        "agency-pkg-*",
        "gp-pkg-*"
      ]
    }]
  },
  "postcss": {
    "subtasks": [{
      "name": "default",
      "packagePattern": [
        "agency-pkg-*",
        "gp-pkg-*"
      ],
      "sourcemap": true,
      "plugins": [{
        "name": "postcss-import",
        "params": []
      }, {
        "name": "precss",
        "params": []
      }, {
        "name": "postcss-calc",
        "params": []
      }, {
        "name": "postcss-clearfix",
        "params": []
      }, {
        "name": "autoprefixer",
        "params": [{
          "browsers": ["> 2%", "last 2 versions", "IE 9", "Firefox ESR"]
        }]
      }, {
        "name": "postcss-discard-comments",
        "params": []
      }, {
        "name": "cssnano",
        "params": []
      }],
      "files": {
        "src": ["./src/pcss/style.pcss", "./src/pcss/critical.pcss"],
        "dest": "<%= destination %>/css"
      }
    }],
    "watch": [{
      "src": ["src/pcss/**/*.pcss"]
    }]
  },
  "purecss": {
    "prefix": "grid",
    "columnHasPrefix": true,
    "columns": 12,
    "columnPrefix": "col",
    "breakpoints": {
      "default": {
        "gutterWidth": "0.9375rem",
        "wrapper": {
          "overflow": "hidden"
        }
      },
      "xs": {
        "width": "30rem",
        "wrapper": {
          "margin": "auto",
          "max-width": "30rem"
        }
      },
      "sm": {
        "width": "48rem",
        "wrapper": {
          "max-width": "48rem"
        }
      },
      "md": {
        "width": "62rem",
        "wrapper": {
          "max-width": "62rem"
        }
      },
      "lg": {
        "width": "75rem",
        "wrapper": {
          "max-width": "75rem"
        }
      }
    },
    "files": {
      "dest": "./generated/pcss/",
      "src": ["base", "grids-core"]
    }
  },
  "sitemap": {
    "subtasks": [{
      "name": "default",
      "domain": "http://www.example.com",
      "files": {
        "src": ["<%= destination %>/**/*.html", "!<%= destination %>/partials/**/*.html"],
        "dest": "<%= destination %>"
      }
    }]
  },
  "webpack": {
    "subtasks": [{
      "name": "app",
      "hotReplacement": true,
      "entry": {
        "app": "./src/js/main"
      },
      "plugins": [{
        "script": "agency-environment/lib/webpack/plugins/provide",
        "config": {
          "$": "jquery",
          "jQuery": "jquery",
          "window.jQuery": "jquery",
          "root.jQuery": "jquery"
        }
      }, {
        "script": "agency-environment/lib/webpack/plugins/polyfills"
      }, {
        "script": "agency-environment/lib/webpack/plugins/dedupe"
      }, {
        "script": "agency-environment/lib/webpack/plugins/uglify",
        "config": {
          "compress": {

          }
        }
      }],
      "module": {
        "preLoaders": [{
          "test": ".js$",
          "exclude": "node_modules",
          "loader": "jshint-loader"
        }],
        "loaders": [{
          "test": ".hbs$",
          "loader": "handlebars-loader",
          "query": {
            "knownHelpers": ["block", "content"],
            "helperDirs": [
              "<%= root %>/src/tmpl/partials"
            ],
            "debug": false
          }
        }, {
          "test": ".css$",
          "loader": "style-loader!css-loader"
        }, {
          "test": ".(png|jpg|gif|svg|ttf|woff|eot)$",
          "loader": "url-loader?limit=100000"
        }, {
          "test": ".modernizrrc$",
          "loader": "modernizr"
        }]
      },
      "resolve": {
        "alias": {
          "modernizr$": "<%= root %>/.modernizrrc"
        }
      },
      "files": {
        "src": ["./src/js/main.js"],
        "dest": "<%= destination %>/js/[name].js",
        "library": ["[name]"]
      }
    }, {
      "name": "embed",

      "entry": {
        "animationFrame": "agency-pkg-polyfills/animationFrame",
        "picture": "agency-pkg-polyfills/picture",
        "embed": "agency-pkg-embed"
      },

      "plugins": [{
        "script": "agency-environment/lib/webpack/plugins/dedupe"
      }, {
        "script": "agency-environment/lib/webpack/plugins/chunk",
        "config": {
          "main": "_main.js",
          "packages": ["polyfills", "embed"]
        }
      }, {
        "script": "agency-environment/lib/webpack/plugins/uglify",
        "config": {
          "compress": {
            "drop_console": false
          }
        }
      }],
      "module": {
        "preLoaders": [{
          "test": ".js$",
          "exclude": "node_modules",
          "loader": "jshint-loader"
        }],
        "loaders": [{
          "test": ".modernizrrc$",
          "loader": "modernizr"
        }]
      },
      "resolve": {
        "alias": {
          "modernizr$": "<%= root %>/.modernizrrc"
        }
      },
      "files": {
        "src": ["./src/js/polyfills/animationFrame", "./src/js/polyfills/picture", "./src/js/embed"],
        "dest": "<%= destination %>/js/embed/[name].js",
        "library": ["[name]"]
      }
    }]
  },
  "zipcompress": {
    "subtasks": [{
      "name": "default",
      "excludes": [],
      "files": {
        "src": ["<%= destination %>"],
        "dest": "<%= destination %>"
      }
    }]
  },
  "exporthbs": {
    "subtasks": [{
      "name": "default",
      "files": {
        "src": ["./src/tmpl/partials/**/*.hbs"],
        "dest": "<%= destination %>/hbs"
      }
    }, {
      "name": "packages",
      "files": {
        "src": [],
        "dest": "<%= destination %>/hbs"
      },
      "options": {
        "base": "./node_modules"
      }
    }]
  }
}
